<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:elevation="4dp"
    android:background="@android:color/white"
    android:weightSum="10"
    android:layout_margin="5dp"
    android:padding="10dp"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="8"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="06/11/15"
                android:textColor="@color/colorPrimary"
                android:id="@+id/mark_date" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Evaluation du module M1P1 Network and System Base"
                android:textColor="@android:color/black"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/mark_title" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="15_16_M1P1_NETWORK_SYSTEM_EVAL"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/mark_id" />
        </LinearLayout>


        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="16.95"
            android:textColor="@color/colorPrimary"
            android:padding="10dp"
            android:id="@+id/mark_value"
            android:gravity="center_vertical|center_horizontal" />

    </LinearLayout>