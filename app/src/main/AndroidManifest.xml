<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.clementduployez.aurionexplorer" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/user"
        android:name="AurionExplorerApplication"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".Login.LoginActivity"
            android:noHistory="true"
            android:label="Aurion Explorer" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>

        <receiver android:process=":remote" android:name=".MesNotes.GradesAlarm"/>

        <service
            android:name=".MesNotes.GradesUpdaterService"
            android:exported="false"
            android:icon="@drawable/ic_school_red_500_18dp"
            android:label="@string/app_name" />
    </application>



</manifest>
